{
    "openapi": "3.0.0",
    "info": {
        "title": "Product API",
        "description": "API for managing products",
        "contact": {
            "email": "support@example.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "API Server"
        }
    ],
    "paths": {
        "/api/products/{code}/update": {
            "put": {
                "tags": [
                    "Products"
                ],
                "summary": "Update product variant by code",
                "description": "Updates the price and other variant fields of a product by its code",
                "operationId": "updateProductByCode",
                "parameters": [
                    {
                        "name": "code",
                        "in": "path",
                        "description": "Product code",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 120.5
                                    },
                                    "discount_price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 110
                                    },
                                    "price_3": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 115
                                    },
                                    "price_6": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 110
                                    },
                                    "price_12": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 105
                                    },
                                    "price_24": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 100
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Variant updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Variant updated successfully"
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "price": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 120.5
                                                },
                                                "discount_price": {
                                                    "type": "number",
                                                    "example": 110
                                                },
                                                "price_3": {
                                                    "type": "number",
                                                    "example": 115
                                                },
                                                "price_6": {
                                                    "type": "number",
                                                    "example": 110
                                                },
                                                "price_12": {
                                                    "type": "number",
                                                    "example": 105
                                                },
                                                "price_24": {
                                                    "type": "number",
                                                    "example": 100
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Price value missing",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Price value missing"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product or variant not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Product not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Validation failed"
                                        },
                                        "errors": {
                                            "properties": {
                                                "price": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The price field is required."
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error / Exception",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Server error"
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "Database connection lost"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Get list of products",
                "operationId": "getProductsList",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "current_page": {
                                            "type": "integer"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Product"
                                            }
                                        },
                                        "total": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Products"
                ],
                "summary": "Create a new product",
                "operationId": "storeProduct",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Product created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/products/{id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Get product by ID",
                "operationId": "getProductById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Product ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found"
                    }
                }
            },
            "put": {
                "tags": [
                    "Products"
                ],
                "summary": "Update an existing product",
                "operationId": "updateProduct",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Product updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Products"
                ],
                "summary": "Delete a product",
                "operationId": "deleteProduct",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Product deleted successfully"
                    },
                    "404": {
                        "description": "Product not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "required": [
                    "category_id",
                    "slug",
                    "name_uz",
                    "description_uz"
                ],
                "properties": {
                    "code": {
                        "type": "string",
                        "example": "00-000001"
                    },
                    "id": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "category_id": {
                        "type": "integer"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "name_uz": {
                        "type": "string"
                    },
                    "name_ru": {
                        "type": "string",
                        "nullable": true
                    },
                    "name_en": {
                        "type": "string",
                        "nullable": true
                    },
                    "description_uz": {
                        "type": "string"
                    },
                    "description_ru": {
                        "type": "string",
                        "nullable": true
                    },
                    "description_en": {
                        "type": "string",
                        "nullable": true
                    },
                    "content_uz": {
                        "type": "string",
                        "nullable": true
                    },
                    "content_ru": {
                        "type": "string",
                        "nullable": true
                    },
                    "content_en": {
                        "type": "string",
                        "nullable": true
                    },
                    "gift_name_uz": {
                        "type": "string",
                        "nullable": true
                    },
                    "gift_name_ru": {
                        "type": "string",
                        "nullable": true
                    },
                    "gift_name_en": {
                        "type": "string",
                        "nullable": true
                    },
                    "gift_image": {
                        "type": "string",
                        "nullable": true
                    },
                    "image": {
                        "type": "string",
                        "nullable": true
                    },
                    "images": {
                        "type": "string",
                        "nullable": true
                    },
                    "color_uz": {
                        "type": "string",
                        "nullable": true
                    },
                    "color_ru": {
                        "type": "string",
                        "nullable": true
                    },
                    "color_en": {
                        "type": "string",
                        "nullable": true
                    },
                    "popular": {
                        "type": "boolean",
                        "nullable": true
                    },
                    "discount_status": {
                        "type": "boolean",
                        "nullable": true
                    },
                    "recommend_status": {
                        "type": "boolean",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "readOnly": true
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "readOnly": true
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Products",
            "description": "Products"
        }
    ]
}