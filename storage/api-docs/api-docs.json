    "paths": {
        "/api/products/code": {
            "post": {
                "tags": [
                    "Products"
                ],
                "summary": "Update multiple product variant prices by product code",
                "description": "Updates variant prices for multiple products using their code. \n         Each item is processed individually. Missing code, product not found, \n         variant not found, or missing price will be skipped with logging and Telegram notifications.",
                "operationId": "d2b2f1cf3c7d6349ea7bfd08380bb30f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "code": {
                                            "type": "string",
                                            "example": "PRD-001"
                                        },
                                        "price": {
                                            "type": "number",
                                            "example": 150000
                                        },
                                        "discount_price": {
                                            "type": "number",
                                            "example": 130000,
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Variants successfully updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Variants updated successfully"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 12
                                                    },
                                                    "product_id": {
                                                        "type": "integer",
                                                        "example": 5
                                                    },
                                                    "price": {
                                                        "type": "number",
                                                        "example": 150000
                                                    },
                                                    "discount_price": {
                                                        "type": "number",
                                                        "example": 130000
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "example": "2025-11-14 19:22:10"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request format",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid data format, expected array"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unexpected server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Server error"
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "SQLSTATE[23000]: Integrity constraint violation"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products": {
